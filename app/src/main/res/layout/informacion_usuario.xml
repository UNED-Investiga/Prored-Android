<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondo1">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swpActualizarInfoUsuario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="@drawable/fondo1"
            android:padding="15dp">
            <TextView

                android:id="@+id/txtvNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nombre Usuario"
                android:textColor="@color/colorletras"
                android:gravity="center_horizontal"

                android:textStyle="bold"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/imgview1"
                android:layout_width="300dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/usuario"

                />
            <LinearLayout
                android:id="@+id/datos"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lugar"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargo"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/todas_imgview"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/email"
                    />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/region"
                    />
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:src="@drawable/administrator"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/Descripciones"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                <TextView
                    android:id="@+id/txtvEmailUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jose@hotmail.com"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/txtvDireccionUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="San Jose"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
                <TextView
                    android:id="@+id/txtvCargoUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Administrador"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    android:gravity="center_horizontal" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Biografia:"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorletras"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvBiografia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto DescripciÃ³n:"/>

            <TextView
                android:id="@+id/txtvregistro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REDES:"
                android:textColor="@color/colorletras"
                android:textStyle="bold" />


        </LinearLayout>

    </android.support.v4.widget.SwipeRefreshLayout>

</RelativeLayout>
