<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/principal"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/colorfondo"

    >
        <TextView

            android:id="@+id/nombreevento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Nombre del Evento"
            android:textColor="@color/colorletras"
            android:gravity="center_horizontal"

            />

        <ImageView
            android:id="@+id/imgview"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"

            />

             <LinearLayout
                android:id="@+id/fecha"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
                 <TextView
                    android:id="@+id/txtfecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fecha"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                     />
                <TextView
                    android:id="@+id/txtlugar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lugar"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    />
                <TextView
                    android:id="@+id/txtcosto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Costo"
                    android:layout_weight="1"
                    android:textColor="@color/colorletras"
                    />
             </LinearLayout>
        <LinearLayout
                android:id="@+id/todas_imgview"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
            <ImageView
                android:id="@+id/imgview_fecha"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/calendario"
                />

            <ImageView
                android:id="@+id/imgview_lugar"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/region"
                />
            <ImageView
                android:id="@+id/imgview_costo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/costo"
                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/Descripciones"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3">
        <TextView
            android:id="@+id/txtvFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 octubre"
            android:layout_weight="1"
            android:textColor="@color/colorletras"
            />
        <TextView
            android:id="@+id/txtvLugar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="San Jose"
            android:layout_weight="1"
            android:textColor="@color/colorletras"
            />
        <TextView
            android:id="@+id/txtvcosto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gratis"
            android:layout_weight="1"
            android:textColor="@color/colorletras"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/descripcion"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="left">

        <TextView
            android:id="@+id/txtvdescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción:"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textColor="@color/colorletras"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/descripcion1"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="left"
        android:layout_weight="0.64">

        <TextView
            android:id="@+id/txtvdescripcion1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto Descripción:"
            android:layout_weight="1"

            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/registro"
        android:orientation="horizontal"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:gravity="left"
        android:layout_weight="0.64">

        <TextView
            android:id="@+id/txtvregistro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registro:"
            android:layout_weight="1"
            android:textColor="@color/colorletras"
            />
        <TextView
            android:id="@+id/txtvlink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LINK:"
            android:layout_weight="1"
            android:textColor="#4950ff" />

    </LinearLayout>




</LinearLayout>







